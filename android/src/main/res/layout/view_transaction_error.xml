<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?selectableItemBackground"
    android:gravity="center_vertical"
    android:minHeight="?listPreferredItemHeightLarge"
    android:orientation="horizontal"
    android:paddingHorizontal="@dimen/padding_default">

    <ImageView
        android:layout_width="@dimen/transaction_icon_size"
        android:layout_height="@dimen/transaction_icon_size"
        android:layout_gravity="center_vertical"
        android:background="@drawable/circle_surface_variant"
        android:padding="@dimen/padding_small"
        android:src="@drawable/ic_baseline_error_24"
        app:tint="?colorError" />

    <TextView
        style="@style/TextAppearance.Solar.Label4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginHorizontal="@dimen/padding_small"
        android:layout_weight="1"
        android:text="@string/error_loading_transaction"
        android:textColor="?colorError"
        android:textStyle="italic" />

</LinearLayout>